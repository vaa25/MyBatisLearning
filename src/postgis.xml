<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="postgisMapper">
    <resultMap id="pointsResult" type="com.vaa25.postgis.Points">
        <result property="id" column="id" jdbcType="NUMERIC"/>
        <result property="point" column="point" javaType="org.postgis.Point"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
    </resultMap>
    
    <select id="selectPoints" parameterType="int" resultMap="pointsResult">
        select * from POINTS where ID = #{id}
    </select>

    <select id="selectAllPoints" resultMap="pointsResult">
        select * from POINTS
    </select>

    <select id="selectRadiusPoints" parameterType="com.vaa25.postgis.SelectRadiusPointsParameter" resultMap="pointsResult">
        SELECT * FROM points WHERE ST_DWithin(point, #{center}, #{radius});
    </select>
</mapper>